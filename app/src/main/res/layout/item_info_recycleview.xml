<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.myapplication.ui.fragment.ImageFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="3dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_titile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/recyclerview_item_size"
                android:layout_height="@dimen/recyclerview_item_size"
                android:scaleType="centerCrop"
                android:id="@+id/info_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_type_item_title"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:padding="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_vector_title_android"/>
            <TextView
                android:id="@+id/item_who_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginRight="3dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>